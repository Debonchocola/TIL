//1.Shorthand property names
{
  const ellie1 = {
    name: "Ellie",
    age: "18",
  };

  const name = "Ellie"; //keyì™€ valueë¡œ ì´ë£¨ì–´ì§
  const age = "18";

  const ellie2 = {
    name: name, //Ellie
    age: age, //18
  };

  const ellie3 = {
    //í‚¤ì™€ ë°¸ë¥˜ê°€ ë™ì¼í•  ë•ŒëŠ” ì´ë ‡ê²Œ í•˜ë‚˜ë¡œ ê°€ëŠ¥
