//2.Destructuring assignment

{
  //object
  const student = {
    name: "Anna",
    level: 1,
  };

  {
    const name = student.name;
    const level = student.level;
    console.log(name, level);
  }
  //Destructuring assignmentë¥¼ í™œìš©í•˜ë©´
  {
    const { name, level } = student; //key ì™€ value ê°’ì„ ì´ë ‡ê²Œ ì •ì˜í•´ì£¼ë©´
    console.log(name, level); // Anna,1ì´ ì¶œë ¥

    //ë‹¤ë¥¸ í‚¤ì™€ ë²¨ë¥˜ë¥¼ ì •ì˜í•˜ê³  ì‹¶ìœ¼ë©´
    const { name: BB, level: level2 } = student;
    console.log(BB, level2);
  }

  //ë°°ì—´ì—ì„œì˜ í™œìš©
  const animals = ["ğŸ¶", "ğŸ±"];

  {
    const first = animals[0];
    const second = animals[1];
    console.log(first, second);
  }
  //ê°ê° ì•ˆí•´ì£¼ê³  ë°°ì—´ë¡œ ë°›ì•„ì„œ ì´ë ‡ê²Œ ê°€ëŠ¥
  {
    const [first, second] = animals;
    console.log(first, second);
  }
}

//3.Spread Syntax
{
  const obj1 = { key: "key1" };
  const obj2 = { key: "key2" };
  const array = [obj1, obj2];

  //array copy
  const arrayCopy = [...array]; //...ë°°ì—´ ë³µì‚¬
  console.log(array, arrayCopy);

  //ìƒˆë¡­ê²Œ ì¶”ê°€
  const arrayCopy2 = [...array, { key: "key3" }];
  obj.key = "newKey"; //ì°¸ì¡°ê°’ì„ ë³µì‚¬í•˜ê¸° ë•Œë¬¸ì— ì´ë ‡ê²Œ í•˜ë©´ ì „ë¶€ ë°”ë€ë‹¤. ì£¼ì˜
  console.log(array, arrayCopy, arrayCopy2); //arrayCopy2ì—ë§Œ key3

  //ì˜¤ë¸Œì íŠ¸ëŠ” ì‹¤ì œì˜ ê°’ì„ ë‹´ê³  ìˆëŠ” ê²ƒì´ ì•„ë‹ˆë¼ ì£¼ì†Œì˜ ê°’ë§Œ ê°€ì§€ê³  ìˆë‹¤.
  //obj copy
