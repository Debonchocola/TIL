//4.Default parameters
{
  function printMessage(message) {
    if (message == null) {
      message = "default message";
    }
    console.log(message);
  }

  printMessage("hello");
  printMessage();

  //Default parameters í™œìš©
  {
    function printMessage(message = "default message") { //ì¸ìì— ì´ˆê¸°ê°’ ì„¤ì •í•¨
      console.log(message);
    }

    printMessage("hello");
    printMessage();
  }
}
